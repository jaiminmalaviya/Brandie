# Production Environment Configuration
NODE_ENV=production
PORT=3000

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_for_production_change_this_value
JWT_EXPIRES_IN=7d

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://postgres:your_secure_password@postgres:5432/brandie_db?schema=public"
DB_HOST=postgres
DB_PORT=5432
DB_NAME=brandie_db
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379

# Logging
LOG_LEVEL=info

# Security
TRUSTED_IPS=127.0.0.1,::1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5
POST_RATE_LIMIT_MAX_REQUESTS=10
