{
  "name": "brandie",
  "version": "1.0.0",
  "description": "This project is a small-scale social media backend API built for the Brandie Backend Engineer assignment. It demonstrates core social networking functionality:",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:db": "ts-node src/tests/database.test.ts",
    "test:comprehensive": "ts-node src/tests/comprehensive.test.ts",
    "test:auth": "ts-node src/tests/auth.test.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio",
    "docker:dev": "docker-compose up -d",
    "docker:dev:build": "docker-compose up --build -d",
    "docker:dev:stop": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:prod:stop": "docker-compose -f docker-compose.prod.yml down",
    "deploy": "./scripts/deploy.sh",
    "setup:dev": "./scripts/dev-setup.sh",
    "cleanup": "./scripts/cleanup.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^24.0.3",
    "nodemon": "^3.1.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.9.0"
  },
  "directories": {
    "test": "tests"
  }
}
